<% @breadcrumbs = [link_to('Posts Editor', {:action => 'index'}), 'Edit Post'] %>

<div class='row'>
  <div class='span12'>

    <%= form_for [:admin, @post], :html => { :class => 'form-horizontal' } do |f| %>

        <%= render :partial => 'post_form', :locals => {
                :f => f,
                :form_legend => "Edit post",
                :submit_label => "Update Post"
        } %>

    <% end %>

  </div>
</div>