<% @breadcrumbs = [link_to('Site Tools', {:action => 'index'}), 'Software Update'] %>

<div class='row'>
  <div class='span12'>

    <% if @localVersionHash != @remoteVersionHash %>

      <div class='alert alert-info'>
        <p>It appears there is an update! </p>
        <p>Local version: <%= @localVersion %></p>
        <p>Latest version: <strong><%= @remoteVersion %></strong></p>
      </div>


      <% if @updateLog.present? %>
        <pre><%= @updateLog %></pre>
      <% else %>
        <pre>You're ahead of master (editor?)</pre>
      <% end %>

    <% else %>

      <div class='alert alert-success'>
        <p><strong>It appears everything is up to date!</strong></p>
        <p>Local version: <%= @localVersion %></p>
        <p>Git Commit Hash: <%= @localVersionHash %></p>
      </div>

    <% end %>

  </div>
</div>