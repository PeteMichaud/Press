
<div class='container' role="main">
  <div class='row'>
    <div class='span9'>

      <% @posts.each do |post| %>

        <div class='content-panel'>
          <h3><%= post.title %></h3>
          <% content = post.content.split(/<!--more-->/) %>
          <%= simple_format(content[0]) %>
        </div>
          
      <% end %>
      
    </div>

    <div class='span3'>

    </div>

  </div>
</div>

