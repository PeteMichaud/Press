
<div class='container' role="main">
  <div class='row'>
    <div class='span9'>

      <% @posts.each do |post| %>

        <div class='content-panel'>
          <h3><%= link_to post.title, '/' + post.seo_url + '/' %></h3>
          <% content = post.content.split(/<!--more-->/) %>
          <%= simple_format(content[0]) %>
          <div class='readmore'><%= link_to 'Read more...', '/' + post.seo_url + '/' %></div>
        </div>
          
      <% end %>

      <div class="container">
        <div class='row'>
          <div class='span9'>
            <ul class='breadcrumb'>
              <% if @pagination_current_page > 1 %>
                <% if @pagination_current_page.to_i - 1 == 1 %>
                  <li><%= link_to 'Newer Entries', '/' %></li>
                <% else %>
                  <li><%= link_to 'Newer Entries', '/page/' + (@pagination_current_page.to_i - 1).to_s + '/' %></li>
                <% end %>
              <% end %>
              <li class='pull-right'><%= link_to 'Older Entries', '/page/' + (@pagination_current_page.to_i + 1).to_s + '/' %></li>
            </ul>
          </div>
        </div>
      </div>

    </div>

    <div class='span3'>

    </div>

  </div>
</div>

