<div class='content-panel'>
  <%= render_markdown header, {:query => @query} %>

  <%= nav_bar do %>
      <li><a href="/"><i class="icon-calendar"></i><%= go_live.strftime("%B %e, %Y @ %l:%M%P") %></a></li>
      <li><a href="/"><i class="icon-user"></i><%= user.display_name %></a></li>
      <%= edit_link %>
      <%= comments_link %>
  <% end %>

  <%= render_markdown tease, :query => @query %>
  <%= read_more_link %>

  <%= nav_bar do %>
    <%= render_taxonomies :categories %>
    <%= render_taxonomies :tags %>
  <% end %>

</div>
