<!DOCTYPE html>
<html>
<head>
  <title>RubyPress</title>
  <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
  <![endif]-->
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <meta name='viewport' content='width=device-width, initial-scale=1.0'>
</head>
<body>

<div class='container' role="header">
  <div class='row'>
    <div class='span9 header-image'>
      <img src='/assets/rsow.com.png'/>
    </div>
    <div class='span3'>

      <%= form_tag '', { :method => 'get', :class => 'site-search pull-right' } do %>
        <%= text_field_tag('query', @query, { :class => 'search-query span2', :placeholder => 'Search Filter...' })  %>
        <a href="<%= url_for :query_string => nil %>">&nbsp;</a>
      <% end %>

    </div>
  </div>

  <div class='navbar'>
    <div class='navbar-inner main'>
      <div class='container'>
        <ul class='nav'>
          <li><a href="<%= url_for :action => 'index' %>"><i class="icon-home"></i></a></li>
          <li class='divider-arrow'></li>
        </ul>
        
        <ul class='nav pull-right'>
          <li class='divider-vertical'></li>
          <li class='dropdown'><a href="#" class='dropdown-toggle' data-toggle='dropdown'>Temporary <b class="caret"></b></a>
            <ul class='dropdown-menu'>
              <li><a href='<%= url_for :controller => 'admin/posts', :action => 'new' %>'>
                <i class='icon-plus'></i>
                New Post</a></li>
              <li class='divider'></li>
              <li><a href='<%= url_for :controller => 'admin/users', :action => 'new' %>'>
                <i class='icon-plus'></i>
                New User</a></li>
            </ul>
          </li>
        </ul>
      </div>
    </div>
  </div>

</div>

<!-- @TODO This should be a view helper -->
<% if @breadcrumbs.present? || @query.present? %>
  <div class='container'>
    <div class='row'>
      <div class='span12'>
        <ul class='breadcrumb'>
          <% if @breadcrumbs.present? %>
            <% active = @breadcrumbs.pop %>
            <% @breadcrumbs.each do |b| %>
              <li><%= b %> <span class='divider'>/</span></li>
            <% end %>
            <li class='active'><%= active %></li>
          <% end %>
          <% if @breadcrumbs.present? && @query.present? %>
          ::
          <% end %>
          <% if @query.present? %>
            <li>Filtering by "<span class="highlight"><%= @query %></span>"</li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
<% end %>


<%= yield %>

</body>
</html>
